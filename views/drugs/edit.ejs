<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Edit <%= drug.genericName %></title>
    <link rel="stylesheet" href="/main.css" />
</head>
<body>
    <div class="text">
        <%- include('../partials/_nav.ejs') %>
        <h1> Edit Your Medication Profile</h1>
        <form class="form" action="/drugs/<%= drug.id %>?_method=PUT" method="POST">
            <div>
                <label for="genericName">Generic Name:</label>
                <input type="text" name="genericName" id="genericName" value="<%= drug.genericName %>">
                <br>
            </div>
            <div>
                <label for="tradeName">Trade Name:</label>
                <input type="text" name="tradeName" id="tradeName" value="<%= drug.tradeName %>">
                <br>
            </div>
            <div>
                <label for="reactive">Potential for a hypersenitive  reaction? </label>
                <input type="checkbox" name="reactive" id="reactive" value=" <%= drug.reactive %>"
                 ">
                <br>
            </div>
            <div>
                <label for="notes">Notes:</label>
                <input type="text" name="notes" id="notes" value=" <%= drug.notes %>">
                <br>
            </div>
            <div>
                <label for="indications">Indications:</label>
                <select name="indications" id="indications" multiple class="selectBox">
                    <% drug.indications.forEach (indication => { %>
                        <option value="<%= indication._id %>"> <%= indication.typeOfCancer %> </option>
                        <% }); %>
                </select>
            </div>
            <button class="button" type="submit">Update Medication</button>
        </form>
            <a href="/drugs/index">Back to library</a>

        <form class="form" action="/drugs/<%= drug.id %>/indications" method="GET">
            <button class="button" type="submit">Add an indication</button>
        </form>
        </div>
    </div>
</body>
</html>
