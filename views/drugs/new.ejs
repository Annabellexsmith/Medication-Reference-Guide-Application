<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Medication Profile</title>
    <link rel="stylesheet" href="/main.css" />
</head>
<body class="container">
    <%- include('../partials/_nav.ejs') %>
    <h1> Create Your Medication Profile</h1>
    <div class="text">
    <form class="form" action="/drugs" method="POST">
            <label for="genericName">Generic Name:</label>
            <input type="text" name="genericName" id="genericName" required>
            <br>
            <label for="tradeName">Trade Name:</label>
            <input type="text" name="tradeName" id="tradeName" required>
            <br>
            <label for="reactive">Potential for a hypersensitivity reaction?</label>
            <input type="checkbox" name="reactive" id="reactive">
            <br>
            <label for="notes">Notes:</label>
            <input type="text" name="notes" id="notes" required>
            <br>
            <label for="indications">Indications:</label>
            <select name="indications" id="indications" multiple class="selectBox">
                <% indications.forEach (indication => { %>
                    <option value="<%= indication._id %>"> <%= indication.typeOfCancer %> </option>
                <% }); %>
            </select>
            <br>
            <button class="button" submit">Add medication</button>
        </form>
    </div>
</body>
</html>

